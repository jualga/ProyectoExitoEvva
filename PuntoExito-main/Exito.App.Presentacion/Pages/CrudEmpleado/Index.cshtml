@page
@model Exito.App.Presentacion.Pages.CrudEmpleado.IndexModel
@{
    ViewData["Title"] = "Index";
    await Html.RenderPartialAsync("_Header");
    await Html.RenderPartialAsync("_SideMenu");
}

<div class="main">
    <p>
        <a asp-page="Create" class="btn btn-primary">Create New <i class="fas fa-plus"></i></a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Empleado[0].Cedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleado[0].Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleado[0].Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleado[0].Usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleado[0].Clave)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleado[0].Rol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleado[0].Sucursal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Empleado)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clave)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sucursal.Nombre)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.EmpleadoId" class="btn btn-primary" title="Editar"><i class="fas fa-edit"></i></a>
                        <a asp-page="./Details" asp-route-id="@item.EmpleadoId" class="btn btn-secondary"  title="Datlles"><i class="fas fa-clipboard-list"></i></a>
                        <a asp-page="./Delete" asp-route-id="@item.EmpleadoId" class="btn btn-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>