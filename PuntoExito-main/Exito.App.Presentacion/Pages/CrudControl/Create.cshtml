@page
@model Exito.App.Presentacion.Pages.CrudControl.CreateModel

@{
    ViewData["Title"] = "Create";
    await Html.RenderPartialAsync("_Header");
    await Html.RenderPartialAsync("_SideMenu");
}


<div class="main">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Control.Nombre" class="control-label"></label>
                    <input asp-for="Control.Nombre" class="form-control" />
                    <span asp-validation-for="Control.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Control.Version" class="control-label"></label>
                    <input asp-for="Control.Version" class="form-control" />
                    <span asp-validation-for="Control.Version" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Control.Fabricante" class="control-label"></label>
                    <input asp-for="Control.Fabricante" class="form-control" />
                    <span asp-validation-for="Control.Fabricante" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Control.precioCompra" class="control-label"></label>
                    <input asp-for="Control.precioCompra" class="form-control" />
                    <span asp-validation-for="Control.precioCompra" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Control.precioVenta" class="control-label"></label>
                    <input asp-for="Control.precioVenta" class="form-control" />
                    <span asp-validation-for="Control.precioVenta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
