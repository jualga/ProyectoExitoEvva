@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using Exito.App.Dominio;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string name = @HttpContextAccessor.HttpContext.Session.GetString("user");
}
@{
  Empleado Person = JsonConvert.DeserializeObject<Empleado>(name);
}
<div class="side-menu">
    <div class="s-title">
        <h2>Exito Dashboard</h2>
    </div>
    
    <div class="s-menu-container">
        @if(Person.Rol.Nombre.Equals("Administrador de sistemas")){
            <a href="/CrudEmpleado" class="CrudEmpleado s-menu-item">
                Empleados
            </a>
        
        }
        @if(Person.Rol.Nombre.Equals("Administrador de Ventas")){
            <a href="/Reports" class="reports s-menu-item">
                Reportes
            </a>
        
        }
        @if(Person.Rol.Nombre.Equals("Administrador de compras")){
            <a href="/CrudCompra" class="CrudCompra s-menu-item">
                Compras
            </a>
            <a href="/CrudControl" class="CrudControl s-menu-item">
                Controles
            </a>
            <a href="/CrudVideoJuegos" class="CrudVideoJuegos s-menu-item">
                Video Juegos
            </a>
            <a href="/CrudConsola" class="CrudConsola s-menu-item">
                Consolas
            </a>
        }
        @if(Person.Rol.Nombre.Equals("Vendedor")){
            <a href="/CrudControl" class="CrudControl s-menu-item">
                Controles
            </a>
            <a href="/CrudVideoJuegos" class="CrudVideoJuegos s-menu-item">
                Video Juegos
            </a>
            <a href="/CrudConsola" class="CrudConsola s-menu-item">
                Consolas
            </a>
            <a href="/CrudVenta/Create" class="CrudVenta s-menu-item">
                Venta
            </a>
        
        }
    </div>

</div>
